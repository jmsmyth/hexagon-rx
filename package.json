  "license": "MIT",
  "main": "dist/index.es5.umd.js",
  "jsnext:main": "dist/index.es6.js",
  "module": "dist/index.es6.js",
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:rollup": "rollup -w -c rollup.test.coverage.config.js",
    "start:browser-test-runner": "browser-test-runner watch",
    "test": "npm run build:test-coverage && browser-test-runner phantomjs test/index.html",
    "build": "npm-run-all --parallel build:*",
    "build:dist": "rollup -c rollup.dist.config.js",
    "build:test": "rollup -c rollup.test.config.js",
    "build:test-coverage": "rollup -c rollup.test.coverage.config.js",
    "prepare-release": "npm-run-all --parallel build:*"
  },
  "dependencies": {},
  "devDependencies": {
    "browser-test-runner": "^0.6.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "phantomjs-prebuilt": "^2.1.16",
    "rollup": "^0.66.6",
    "rollup-plugin-buble": "^0.19.4",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-watch": "^4.3.1"
  }
}
