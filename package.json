{
  "name": "hexagon-rx",
  "version": "0.3.1",
  "description": "Reactive super powers for hexagon-js",
  "author": "James Smyth <jmsmyth@users.noreply.github.com>",
  "license": "MIT",
  "main": "dist/index.es5.umd.js",
  "jsnext:main": "dist/index.es6.js",
  "module": "dist/index.es6.js",
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:rollup": "rollup -w -c rollup.test.coverage.config.js",
    "start:browser-test-runner": "browser-test-runner watch",
    "test": "npm run build:test-coverage && browser-test-runner phantomjs test/index.html",
    "build": "npm-run-all --parallel build:*",
    "build:es5": "rollup -c rollup.es5.config.js",
    "build:es5-umd": "rollup -c rollup.es5.umd.config.js",
    "build:es6": "rollup -c rollup.es6.config.js",
    "build:test": "rollup -c rollup.test.config.js",
    "build:test-coverage": "rollup -c rollup.test.coverage.config.js",
    "prepare-release": "npm-run-all --parallel build:*"
  },
  "dependencies": {},
  "devDependencies": {
    "browser-test-runner": "^0.5.3",
    "chai": "^4.1.2",
    "mocha": "^3.5.0",
    "npm-run-all": "^4.1.1",
    "phantomjs-prebuilt": "^2.1.15",
    "rollup": "^0.49.3",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^4.3.1"
  }
}
